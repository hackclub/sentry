{
  "name": "slack-message-deletion-bot",
  "version": "1.0.0",
  "description": "A resilient Slack bot for deleting messages and threads using Drizzle ORM",
  "main": "dist/index.js",
  "scripts": {
    "build": "tsc",
    "start": "node dist/index.js",
    "dev": "nodemon --exec ts-node src/index.ts",
    "migrate": "drizzle-kit generate && ts-node src/scripts/migrate.ts",
    "seed": "ts-node src/scripts/seed.ts",
    "db:generate": "drizzle-kit generate",
    "db:migrate": "ts-node src/scripts/migrate.ts",
    "db:seed": "ts-node src/scripts/seed.ts"
  },
  "dependencies": {
    "@slack/bolt": "^4.5.0",
    "@slack/web-api": "^7.11.0",
    "bullmq": "^4.13.0",
    "dotenv": "^17.2.3",
    "drizzle-orm": "^0.44.6",
    "ioredis": "^5.4.1",
    "pino": "^9.4.0",
    "pg": "^8.16.3",
    "postgres": "^3.4.7",
    "redis": "^4.7.0"
  },
  "devDependencies": {
    "@types/node": "^24.8.1",
    "@types/pg": "^8.15.5",
    "@types/redis": "^4.0.11",
    "drizzle-kit": "^0.31.5",
    "nodemon": "^3.1.10",
    "ts-node": "^10.9.2",
    "tsx": "^4.20.6",
    "typescript": "^5.9.3"
  }
}
